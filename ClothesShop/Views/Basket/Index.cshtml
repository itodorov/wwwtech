@model ClothesShop.Models.BasketModel
@{
    ViewBag.Title = "Basket";
}

<h2>Продукти в кошница</h2>

    <table id="basketList" cellpadding = "0" cellspacing="0">
        <tr>
            <th>
                Продукт
            </th>
            <th>
                Размер
            </th>
            <th>
                Количество
            </th>
            <th>
            
            </th>
        </tr>
        
        @{
            int i =0;
        }

        @foreach (var item in Model)
        {
            
            <tr class = "@String.Format("{0}", i % 2 == 0? "even" : "odd")">
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Size
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @Html.ActionLink(" ", "RemoveFromCart", 
                    new { id = item.Product.ID, quantity = item.Quantity, size = item.Size }, 
                    new { onclick = "return confirm('Are you sure want to remove this from the basket?');", id="removeBtn", title = "Remove" })
                </td>
            </tr>
            
            i++;
        }
    </table>
