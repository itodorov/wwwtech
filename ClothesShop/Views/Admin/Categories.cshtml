@model IEnumerable<ClothesShop.Models.CategoryModel>

@{
    ViewBag.Title = "Categories";
}

<div id="adminMenu">
	@Html.Partial("AdminMenu")
</div>

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Delete", "RemoveCategory", new { id = item.ID }, new { onclick = "return confirm(\"Are you sure want to delete this?\")" })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Add new", "AddCategory")