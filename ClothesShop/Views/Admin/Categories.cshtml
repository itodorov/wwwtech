@model IEnumerable<ClothesShop.Models.CategoryModel>

@{
    ViewBag.Title = "Categories";
}

<div id="adminMenu">
	@Html.Partial("AdminMenu")
</div>

<h2>Categories</h2>

<table>
    <tr> 
        <th></th>
        <th>
            Name
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
    
        <td>
            @Html.ActionLink(" ", "RemoveCategory", new { id = item.ID },
         new { onclick = "return confirm(\"Are you sure want to delete this?\")", id = "removeBtn", title="Remove" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
    </tr>
}

</table>
@Html.ActionLink(" ", "AddCategory", null, new { id = "addBtn" })